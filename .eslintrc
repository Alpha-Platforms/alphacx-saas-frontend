{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended", "airbnb", "airbnb/hooks", "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 6,
        "sourceType": "module",
        "requireConfigFile": false,
        "babelOptions": {
            "presets": ["@babel/preset-react"]
        }
    },
    "plugins": ["react"],
    "rules": {
        "prettier/prettier": [
            "error", {
                "endOfLine": "auto"
            }
        ],
        "no-nested-ternary": "off",
        "no-useless-escape": "off",
        "no-prototype-builtins": "off",
        "no-underscore-dangle": "off",
        "no-unused-expressions": "off",
        "camelcase": "warn",
        "no-constant-condition": "off",
        "jsx-a11y/label-has-associated-control": [
            "error", {
                "required": {
                    "some": ["nesting", "id"]
                }
            }
        ],
        "jsx-a11y/label-has-for": [
            "error", {
                "required": {
                    "some": ["nesting", "id"]
                }
            }
        ]
    },
    "parser": "@babel/eslint-parser"
}